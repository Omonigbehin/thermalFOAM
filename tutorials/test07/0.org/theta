    }
    
    
    
	erodedWall
    {
        type    zeroGradient;
    }
    
        
    top
    {
        type            zeroGradient;
    }
    
    
    bottom
    {
        type            zeroGradient;
    }
    
    
    backSurface
    {
        type            zeroGradient;
    }
    
    
    frontAndBack
    {
        type            zeroGradient;
    }
